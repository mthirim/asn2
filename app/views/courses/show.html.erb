<p id="notice"><%= notice %></p>

<table>
	<thead>
		<tr>
			<th>Student ID</th>
			<th>Percentage</th>
			<th>Lettergrade</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>

		<% @enrolledStudents = Enrollment.where(course_id:@course) %>

		<% @enrolledStudents.each do |enrollment| %>
		<tr>
			<td><%= enrollment.student.student_id %></td>
			<td><%= enrollment.percentage %></td>
			<td><%= enrollment.lettergrade %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Edit', edit_course_path(@course) %>
<%= link_to 'Back', courses_path %>
<%= link_to 'Assign Grades', "/histogram.html" %>





